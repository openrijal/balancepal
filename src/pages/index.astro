---
import BaseLayout from '../layouts/BaseLayout.astro';
import { supabase } from '@/lib/supabase';

const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (accessToken && refreshToken) {
  return Astro.redirect('/dashboard');
}
---

<BaseLayout>
  <main class="from-mint/20 via-sage/20 to-lavender/20 min-h-screen bg-gradient-to-br">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="bg-sky/20 absolute -top-40 -right-40 h-80 w-80 rounded-full blur-3xl"></div>
        <div class="bg-rose/20 absolute -bottom-40 -left-40 h-80 w-80 rounded-full blur-3xl"></div>
      </div>

      <div class="relative mx-auto max-w-7xl px-4 pt-20 pb-24 sm:px-6 lg:px-8">
        <!-- Navigation -->
        <nav class="mb-16 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="bg-sage flex h-10 w-10 items-center justify-center rounded-xl">
              <span class="text-xl font-bold text-white">B</span>
            </div>
            <span class="text-xl font-semibold text-gray-900">Balance Pal</span>
          </div>
          <div class="flex items-center gap-4">
            <a
              href="/login"
              class="font-medium text-gray-600 transition-colors hover:text-gray-900"
            >
              Log in
            </a>
            <a href="/signup" class="btn btn-primary"> Get Started </a>
          </div>
        </nav>

        <!-- Hero Content -->
        <div class="mx-auto max-w-3xl text-center">
          <h1 class="mb-6 text-4xl leading-tight font-bold text-gray-900 sm:text-5xl lg:text-6xl">
            Your pal for
            <span class="text-primary-600">balancing expenses</span>
          </h1>
          <p class="mx-auto mb-10 max-w-2xl text-lg text-gray-600 sm:text-xl">
            A friendly expense splitting app that helps groups track shared costs, split bills
            fairly, and settle debts with minimal hassle.
          </p>
          <div class="flex flex-col justify-center gap-4 sm:flex-row">
            <a href="/signup" class="btn btn-primary px-8 py-3 text-lg"> Start Splitting Free </a>
            <a
              href="#features"
              class="btn border border-gray-200 bg-white px-8 py-3 text-lg text-gray-800 hover:bg-gray-50"
            >
              Learn More
            </a>
          </div>
        </div>

        <!-- App Preview Placeholder -->
        <div class="relative mt-20">
          <div class="mx-auto max-w-4xl rounded-2xl border border-gray-100 bg-white p-8 shadow-2xl">
            <div class="mb-6 flex items-center gap-2">
              <div class="bg-danger-500 h-3 w-3 rounded-full"></div>
              <div class="bg-warning-500 h-3 w-3 rounded-full"></div>
              <div class="bg-success-500 h-3 w-3 rounded-full"></div>
            </div>
            <div class="grid grid-cols-3 gap-4">
              <div class="bg-sage/30 h-32 rounded-xl p-4"></div>
              <div class="bg-sky/30 h-32 rounded-xl p-4"></div>
              <div class="bg-rose/30 h-32 rounded-xl p-4"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="bg-white py-24">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-3xl font-bold text-gray-900 sm:text-4xl">
            Everything you need to split expenses
          </h2>
          <p class="mx-auto max-w-2xl text-lg text-gray-600">
            From simple equal splits to complex percentage calculations, Balance Pal handles it all.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <!-- Feature 1 -->
          <div class="bg-sage/20 rounded-2xl p-8 transition-shadow hover:shadow-lg">
            <div class="bg-sage/40 mb-6 flex h-12 w-12 items-center justify-center rounded-xl">
              <svg
                class="text-primary-700 h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-semibold text-gray-900">Group Management</h3>
            <p class="text-gray-600">
              Create unlimited groups for trips, roommates, or any shared expense situation.
            </p>
          </div>

          <!-- Feature 2 -->
          <div class="bg-sky/20 rounded-2xl p-8 transition-shadow hover:shadow-lg">
            <div class="bg-sky/40 mb-6 flex h-12 w-12 items-center justify-center rounded-xl">
              <svg class="text-sky h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-semibold text-gray-900">Smart Split Calculator</h3>
            <p class="text-gray-600">
              Split equally, by percentage, exact amounts, or shares. Perfect for any situation.
            </p>
          </div>

          <!-- Feature 3 -->
          <div class="bg-lavender/20 rounded-2xl p-8 transition-shadow hover:shadow-lg">
            <div class="bg-lavender/40 mb-6 flex h-12 w-12 items-center justify-center rounded-xl">
              <svg
                class="text-lavender h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-semibold text-gray-900">Debt Simplification</h3>
            <p class="text-gray-600">
              Minimize the number of transactions with our smart debt simplification algorithm.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="from-sage to-primary-600 bg-gradient-to-r py-24">
      <div class="mx-auto max-w-3xl px-4 text-center">
        <h2 class="mb-6 text-3xl font-bold text-white sm:text-4xl">
          Ready to simplify your shared expenses?
        </h2>
        <p class="mb-10 text-lg text-white/80">
          Join thousands of groups who trust Balance Pal for fair expense splitting.
        </p>
        <a href="/signup" class="btn text-primary-700 hover:bg-mint bg-white px-8 py-3 text-lg">
          Get Started Free
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 py-12">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center justify-between md:flex-row">
          <div class="mb-4 flex items-center gap-2 md:mb-0">
            <div class="bg-sage flex h-8 w-8 items-center justify-center rounded-lg">
              <span class="font-bold text-white">B</span>
            </div>
            <span class="font-semibold text-white">Balance Pal</span>
          </div>
          <p class="text-sm text-gray-400">Â© 2024 Balance Pal. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>
