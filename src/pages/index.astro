---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<main
		class="min-h-screen bg-gradient-to-br from-mint/20 via-sage/20 to-lavender/20"
	>
		<!-- Hero Section -->
		<section class="relative overflow-hidden">
			<!-- Background decoration -->
			<div class="absolute inset-0 overflow-hidden">
				<div
					class="absolute -top-40 -right-40 w-80 h-80 bg-sky/20 rounded-full blur-3xl"
				>
				</div>
				<div
					class="absolute -bottom-40 -left-40 w-80 h-80 bg-rose/20 rounded-full blur-3xl"
				>
				</div>
			</div>

			<div
				class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-24"
			>
				<!-- Navigation -->
				<nav class="flex justify-between items-center mb-16">
					<div class="flex items-center gap-2">
						<div
							class="w-10 h-10 bg-sage rounded-xl flex items-center justify-center"
						>
							<span class="text-white font-bold text-xl">B</span>
						</div>
						<span class="font-semibold text-xl text-gray-900"
							>Balance Pal</span
						>
					</div>
					<div class="flex items-center gap-4">
						<a
							href="/login"
							class="text-gray-600 hover:text-gray-900 font-medium transition-colors"
						>
							Log in
						</a>
						<a href="/signup" class="btn btn-primary">
							Get Started
						</a>
					</div>
				</nav>

				<!-- Hero Content -->
				<div class="text-center max-w-3xl mx-auto">
					<h1
						class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6"
					>
						Your pal for
						<span class="text-primary-600">balancing expenses</span>
					</h1>
					<p
						class="text-lg sm:text-xl text-gray-600 mb-10 max-w-2xl mx-auto"
					>
						A friendly expense splitting app that helps groups track
						shared costs, split bills fairly, and settle debts with
						minimal hassle.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a
							href="/signup"
							class="btn btn-primary text-lg px-8 py-3"
						>
							Start Splitting Free
						</a>
						<a
							href="#features"
							class="btn bg-white text-gray-800 border border-gray-200 hover:bg-gray-50 text-lg px-8 py-3"
						>
							Learn More
						</a>
					</div>
				</div>

				<!-- App Preview Placeholder -->
				<div class="mt-20 relative">
					<div
						class="bg-white rounded-2xl shadow-2xl border border-gray-100 p-8 max-w-4xl mx-auto"
					>
						<div class="flex items-center gap-2 mb-6">
							<div class="w-3 h-3 rounded-full bg-danger-500">
							</div>
							<div class="w-3 h-3 rounded-full bg-warning-500">
							</div>
							<div class="w-3 h-3 rounded-full bg-success-500">
							</div>
						</div>
						<div class="grid grid-cols-3 gap-4">
							<div class="bg-sage/30 rounded-xl p-4 h-32"></div>
							<div class="bg-sky/30 rounded-xl p-4 h-32"></div>
							<div class="bg-rose/30 rounded-xl p-4 h-32"></div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section id="features" class="py-24 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2
						class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4"
					>
						Everything you need to split expenses
					</h2>
					<p class="text-lg text-gray-600 max-w-2xl mx-auto">
						From simple equal splits to complex percentage
						calculations, Balance Pal handles it all.
					</p>
				</div>

				<div class="grid md:grid-cols-3 gap-8">
					<!-- Feature 1 -->
					<div
						class="bg-sage/20 rounded-2xl p-8 hover:shadow-lg transition-shadow"
					>
						<div
							class="w-12 h-12 bg-sage/40 rounded-xl flex items-center justify-center mb-6"
						>
							<svg
								class="w-6 h-6 text-primary-700"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
								></path>
							</svg>
						</div>
						<h3 class="text-xl font-semibold text-gray-900 mb-3">
							Group Management
						</h3>
						<p class="text-gray-600">
							Create unlimited groups for trips, roommates, or any
							shared expense situation.
						</p>
					</div>

					<!-- Feature 2 -->
					<div
						class="bg-sky/20 rounded-2xl p-8 hover:shadow-lg transition-shadow"
					>
						<div
							class="w-12 h-12 bg-sky/40 rounded-xl flex items-center justify-center mb-6"
						>
							<svg
								class="w-6 h-6 text-sky"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"
								></path>
							</svg>
						</div>
						<h3 class="text-xl font-semibold text-gray-900 mb-3">
							Smart Split Calculator
						</h3>
						<p class="text-gray-600">
							Split equally, by percentage, exact amounts, or
							shares. Perfect for any situation.
						</p>
					</div>

					<!-- Feature 3 -->
					<div
						class="bg-lavender/20 rounded-2xl p-8 hover:shadow-lg transition-shadow"
					>
						<div
							class="w-12 h-12 bg-lavender/40 rounded-xl flex items-center justify-center mb-6"
						>
							<svg
								class="w-6 h-6 text-lavender"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-semibold text-gray-900 mb-3">
							Debt Simplification
						</h3>
						<p class="text-gray-600">
							Minimize the number of transactions with our smart
							debt simplification algorithm.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-24 bg-gradient-to-r from-sage to-primary-600">
			<div class="max-w-3xl mx-auto px-4 text-center">
				<h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
					Ready to simplify your shared expenses?
				</h2>
				<p class="text-lg text-white/80 mb-10">
					Join thousands of groups who trust Balance Pal for fair
					expense splitting.
				</p>
				<a
					href="/signup"
					class="btn bg-white text-primary-700 hover:bg-mint text-lg px-8 py-3"
				>
					Get Started Free
				</a>
			</div>
		</section>

		<!-- Footer -->
		<footer class="py-12 bg-gray-900">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div
					class="flex flex-col md:flex-row justify-between items-center"
				>
					<div class="flex items-center gap-2 mb-4 md:mb-0">
						<div
							class="w-8 h-8 bg-sage rounded-lg flex items-center justify-center"
						>
							<span class="text-white font-bold">B</span>
						</div>
						<span class="font-semibold text-white">Balance Pal</span
						>
					</div>
					<p class="text-gray-400 text-sm">
						Â© 2024 Balance Pal. All rights reserved.
					</p>
				</div>
			</div>
		</footer>
	</main>
</BaseLayout>
