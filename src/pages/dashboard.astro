---
import AppLayout from "@/layouts/AppLayout.astro";
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
---

<AppLayout title="Dashboard - Balance Pal">
    <div class="p-4 md:p-6 lg:p-8 max-w-7xl mx-auto">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900">
                Dashboard
            </h1>
            <p class="text-gray-600 mt-1">
                Welcome back! Here's your expense overview.
            </p>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
            <div
                class="bg-white rounded-xl p-4 border border-gray-100 shadow-sm"
            >
                <p class="text-sm text-gray-500">You Owe</p>
                <p class="text-2xl font-bold text-danger-500">$0.00</p>
            </div>
            <div
                class="bg-white rounded-xl p-4 border border-gray-100 shadow-sm"
            >
                <p class="text-sm text-gray-500">You're Owed</p>
                <p class="text-2xl font-bold text-success-500">$0.00</p>
            </div>
            <div
                class="bg-white rounded-xl p-4 border border-gray-100 shadow-sm"
            >
                <p class="text-sm text-gray-500">Total Balance</p>
                <p class="text-2xl font-bold text-gray-900">$0.00</p>
            </div>
            <div
                class="bg-white rounded-xl p-4 border border-gray-100 shadow-sm"
            >
                <p class="text-sm text-gray-500">Active Groups</p>
                <p class="text-2xl font-bold text-primary-600">0</p>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-3 gap-6">
            <!-- Recent Groups -->
            <div class="lg:col-span-2">
                <div
                    class="bg-white rounded-xl border border-gray-100 shadow-sm"
                >
                    <div class="p-4 border-b border-gray-100">
                        <h2 class="font-semibold text-gray-900">Your Groups</h2>
                    </div>
                    <div class="p-8 text-center">
                        <div
                            class="w-16 h-16 bg-sage/20 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-sage"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="font-medium text-gray-900 mb-1">
                            No groups yet
                        </h3>
                        <p class="text-gray-500 text-sm mb-4">
                            Create a group to start splitting expenses with
                            friends.
                        </p>
                        <a href="/groups/new" class="btn btn-primary"
                            >Create Group</a
                        >
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div>
                <div
                    class="bg-white rounded-xl border border-gray-100 shadow-sm"
                >
                    <div class="p-4 border-b border-gray-100">
                        <h2 class="font-semibold text-gray-900">
                            Recent Activity
                        </h2>
                    </div>
                    <div class="p-8 text-center">
                        <div
                            class="w-16 h-16 bg-sky/20 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-sky"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="font-medium text-gray-900 mb-1">
                            No activity yet
                        </h3>
                        <p class="text-gray-500 text-sm">
                            Your recent expenses and settlements will appear
                            here.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</AppLayout>
