---
import AppLayout from '@/layouts/AppLayout.astro';
import { Card, CardHeader, CardTitle, CardContent } from '@/components/ui/card';
---

<AppLayout title="Dashboard - Balance Pal">
  <div class="mx-auto max-w-7xl p-4 md:p-6 lg:p-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900 md:text-3xl">Dashboard</h1>
      <p class="mt-1 text-gray-600">Welcome back! Here's your expense overview.</p>
    </div>

    <!-- Quick Stats -->
    <div class="mb-8 grid grid-cols-2 gap-4 lg:grid-cols-4">
      <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
        <p class="text-sm text-gray-500">You Owe</p>
        <p class="text-danger-500 text-2xl font-bold">$0.00</p>
      </div>
      <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
        <p class="text-sm text-gray-500">You're Owed</p>
        <p class="text-success-500 text-2xl font-bold">$0.00</p>
      </div>
      <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
        <p class="text-sm text-gray-500">Total Balance</p>
        <p class="text-2xl font-bold text-gray-900">$0.00</p>
      </div>
      <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
        <p class="text-sm text-gray-500">Active Groups</p>
        <p class="text-primary-600 text-2xl font-bold">0</p>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid gap-6 lg:grid-cols-3">
      <!-- Recent Groups -->
      <div class="lg:col-span-2">
        <div class="rounded-xl border border-gray-100 bg-white shadow-sm">
          <div class="border-b border-gray-100 p-4">
            <h2 class="font-semibold text-gray-900">Your Groups</h2>
          </div>
          <div class="p-8 text-center">
            <div
              class="bg-sage/20 mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full"
            >
              <svg class="text-sage h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-1 font-medium text-gray-900">No groups yet</h3>
            <p class="mb-4 text-sm text-gray-500">
              Create a group to start splitting expenses with friends.
            </p>
            <a href="/groups/new" class="btn btn-primary">Create Group</a>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div>
        <div class="rounded-xl border border-gray-100 bg-white shadow-sm">
          <div class="border-b border-gray-100 p-4">
            <h2 class="font-semibold text-gray-900">Recent Activity</h2>
          </div>
          <div class="p-8 text-center">
            <div
              class="bg-sky/20 mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full"
            >
              <svg class="text-sky h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="mb-1 font-medium text-gray-900">No activity yet</h3>
            <p class="text-sm text-gray-500">
              Your recent expenses and settlements will appear here.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
