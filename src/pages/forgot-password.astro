---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ForgotPasswordForm from '@/components/auth/ForgotPasswordForm.vue';
---

<BaseLayout title="Forgot Password - Balance Pal" description="Reset your Balance Pal password">
  <main
    class="from-mint/20 via-sage/20 to-lavender/20 flex min-h-screen items-center justify-center bg-gradient-to-br p-4"
  >
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="mb-8 text-center">
        <a href="/" class="inline-flex items-center gap-2">
          <div class="bg-sage flex h-12 w-12 items-center justify-center rounded-xl">
            <span class="text-2xl font-bold text-white">B</span>
          </div>
          <span class="text-2xl font-semibold text-gray-900">Balance Pal</span>
        </a>
      </div>

      <!-- Forgot Password Card -->
      <div class="rounded-2xl border border-gray-100 bg-white p-8 shadow-xl">
        <h1 class="mb-2 text-2xl font-bold text-gray-900">Forgot password?</h1>
        <p class="mb-6 text-gray-600">Enter your email and we'll send you a reset link</p>

        <ForgotPasswordForm client:load />

        <div class="mt-6 text-center text-sm">
          <a href="/login" class="text-primary-600 hover:text-primary-700 font-medium">
            ‚Üê Back to login
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
