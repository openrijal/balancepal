---
import AppLayout from '@/layouts/AppLayout.astro';
import CreateGroupForm from '@/components/groups/CreateGroupForm.vue';
import { GroupService } from '@/services/groups';
import { BalanceService } from '@/services/balances';

// User is attached by middleware (already authenticated by middleware)
const user = Astro.locals.user!;

const groups = await GroupService.getUserGroups(user.id);

// Fetch balance info for each group
const groupsWithBalances = await Promise.all(
  groups.map(async (group) => {
    try {
      const stats = await BalanceService.getGroupStats(group.id, user.id);
      return {
        ...group,
        userBalance: stats.userBalance,
        totalExpenses: stats.totalExpenses,
      };
    } catch {
      return {
        ...group,
        userBalance: 0,
        totalExpenses: 0,
      };
    }
  })
);

const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
  }).format(amount);
};
---

<AppLayout title="My Groups">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-foreground text-3xl font-bold tracking-tight">My Groups</h1>
        <p class="text-muted-foreground mt-1">Manage your expense sharing groups.</p>
      </div>
      <CreateGroupForm client:load />
    </div>

    {
      groupsWithBalances.length === 0 ? (
        <div class="bg-muted/30 border-muted-foreground/25 rounded-lg border border-dashed py-12 text-center">
          <div class="space-y-3">
            <h3 class="text-lg font-medium">No groups yet</h3>
            <p class="text-muted-foreground mx-auto max-w-sm">
              Create a group to start splitting expenses with your friends, roommates, or family.
            </p>
          </div>
        </div>
      ) : (
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {groupsWithBalances.map((group) => (
            <a
              href={`/groups/${group.id}`}
              class="group bg-card hover:border-primary/50 relative flex flex-col justify-between space-y-4 rounded-xl border p-6 shadow-sm transition-all hover:shadow-md"
            >
              <div class="space-y-2">
                <h3 class="group-hover:text-primary text-xl leading-none font-semibold tracking-tight transition-colors">
                  {group.name}
                </h3>
                {group.description && (
                  <p class="text-muted-foreground line-clamp-2 text-sm">{group.description}</p>
                )}
              </div>

              <!-- Quick Info -->
              <div class="flex items-center gap-4 text-sm">
                <div class="flex items-center gap-1 text-muted-foreground">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                  <span>{group.memberCount} {group.memberCount === 1 ? 'member' : 'members'}</span>
                </div>
                
                {group.userBalance !== 0 && (
                  <div class:list={[
                    "flex items-center gap-1 font-medium",
                    group.userBalance > 0 ? "text-green-600" : "text-red-600"
                  ]}>
                    {group.userBalance > 0 ? (
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                      </svg>
                    ) : (
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                      </svg>
                    )}
                    <span>{group.userBalance > 0 ? '+' : ''}{formatCurrency(group.userBalance)}</span>
                  </div>
                )}
              </div>

              <div class="text-muted-foreground flex items-center text-sm">
                <span class="flex items-center">View Details &rarr;</span>
              </div>
            </a>
          ))}
        </div>
      )
    }
  </div>
</AppLayout>
