---
import BaseLayout from '@/layouts/BaseLayout.astro';
import LoginForm from '@/components/auth/LoginForm.vue';

const redirectTo = Astro.url.searchParams.get('redirect') ?? '/dashboard';
---

<BaseLayout title="Log In - Balance Pal" description="Log in to your Balance Pal account">
  <main
    class="from-mint/20 via-sage/20 to-lavender/20 flex min-h-screen items-center justify-center bg-gradient-to-br p-4"
  >
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="mb-8 text-center">
        <a href="/" class="inline-flex items-center gap-2">
          <div class="bg-sage flex h-12 w-12 items-center justify-center rounded-xl">
            <span class="text-2xl font-bold text-white">B</span>
          </div>
          <span class="text-2xl font-semibold text-gray-900">Balance Pal</span>
        </a>
      </div>

      <!-- Login Card -->
      <div class="rounded-2xl border border-gray-100 bg-white p-8 shadow-xl">
        <h1 class="mb-2 text-2xl font-bold text-gray-900">Welcome back</h1>
        <p class="mb-6 text-gray-600">Log in to manage your shared expenses</p>

        <LoginForm client:load redirectTo={redirectTo} />

        <div class="mt-6 text-center text-sm">
          <span class="text-gray-600">Don't have an account? </span>
          <a href="/signup" class="text-primary-600 hover:text-primary-700 font-medium">
            Sign up
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
