---
import BaseLayout from "@/layouts/BaseLayout.astro";
import LoginForm from "@/components/auth/LoginForm.vue";

const redirectTo = Astro.url.searchParams.get("redirect") ?? "/dashboard";
---

<BaseLayout
    title="Log In - Balance Pal"
    description="Log in to your Balance Pal account"
>
    <main
        class="min-h-screen bg-gradient-to-br from-mint/20 via-sage/20 to-lavender/20 flex items-center justify-center p-4"
    >
        <div class="w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-8">
                <a href="/" class="inline-flex items-center gap-2">
                    <div
                        class="w-12 h-12 bg-sage rounded-xl flex items-center justify-center"
                    >
                        <span class="text-white font-bold text-2xl">B</span>
                    </div>
                    <span class="font-semibold text-2xl text-gray-900"
                        >Balance Pal</span
                    >
                </a>
            </div>

            <!-- Login Card -->
            <div
                class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8"
            >
                <h1 class="text-2xl font-bold text-gray-900 mb-2">
                    Welcome back
                </h1>
                <p class="text-gray-600 mb-6">
                    Log in to manage your shared expenses
                </p>

                <LoginForm client:load redirectTo={redirectTo} />

                <div class="mt-6 text-center text-sm">
                    <span class="text-gray-600">Don't have an account? </span>
                    <a
                        href="/signup"
                        class="text-primary-600 hover:text-primary-700 font-medium"
                    >
                        Sign up
                    </a>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
