---
import AppLayout from '@/layouts/AppLayout.astro';
import AllExpensesList from '@/components/expenses/AllExpensesList.vue';
import { supabase } from '@/lib/supabase';

const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (!accessToken || !refreshToken) {
  return Astro.redirect('/login');
}

// Set session with tokens to enable proper auth and token refresh
const {
  data: { user },
  error,
} = await supabase.auth.setSession({
  access_token: accessToken,
  refresh_token: refreshToken,
});

if (error || !user) {
  return Astro.redirect('/login');
}
---

<AppLayout title="All Expenses - Balance Pal">
  <div class="mx-auto max-w-7xl p-4 md:p-6 lg:p-8">
    <AllExpensesList client:load currentUserId={user.id} />
  </div>
</AppLayout>
